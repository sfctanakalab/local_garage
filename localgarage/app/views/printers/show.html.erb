<%- model_class = Printer -%>
<div class="printer_info_title margin_top_100">
    <h1><%= @printer.machinemodel %></h1>
</div>

<div class="custom_container padding_top_70 printer_info_content">
    <div class="printer_info padding_top_50">
        <div class="printer_info_main_content">
            <div class="printer_img">
                <%= image_tag image_printer_path(@printer) %>
            </div>
            <div class="printer_info_wrapper">
                <div class="printer_info_column">
                    <label><strong><%= model_class.human_attribute_name(:material) %>:</strong></label>
                    <div class="content"><%= @printer.material %></div>
                </div>
                <div class="printer_info_column">
                    <label><strong><%= model_class.human_attribute_name(:color) %>:</strong></label>
                    <div class="content"><%= @printer.color%></div>
                </div>
                <div class="printer_info_column">
                    <label><strong><%= model_class.human_attribute_name(:machinemodel) %>:</strong></label>
                    <div class="content"><%= @printer.machinemodel %></div>
                </div>
                
                <div class="printer_info_column">
                    <label><strong><%= model_class.human_attribute_name(:resolution) %>:</strong></label>
                    <div class="content"><%= @printer.resolution %></div>
                </div>
                <div class="printer_info_column">
                    <label><strong><%= model_class.human_attribute_name(:location) %>:</strong></label>
                    <div class="content"><%= @printer.description %></div>
                </div>
            </div>
        </div>
        <div class="printer_info_sidebar" id="panel">
            <div class="sidebar_container" id="panel_2">
                <% if @printer.condition == true %>
                    <h4 class="use_this_printer"><%= link_to "このプリンターを使う", data_path %></h4>
                <% else %>
                    <h4 class="during_use">このプリンターは現在使用中です</h4>
                <% end %>
                <div class="form-actions">
                    <div class="form_actions_column"><%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_printer_path(@printer), :class => '' %></div>
                    <div class="form_actions_column"><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        printer_path(@printer),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => '' %></div>
                </div>
            </div>
            <p id="notice"><%= notice %></p>
        </div>
    </div>
        
    <div class="printer_info_back_btn">
        <%= link_to 'Back', printers_path, 'data-no-turbolink' => true %>
    </div>
</div>


<div class="footer">
    <ul class="footer_links">
        <li>
            <h2>local garage</h2>
        </li>
        <li>
            <h4>Company</h4>
            <dl>
                <dd>About</dd>
                <dd>Jobs</dd>
                <dd>Blog</dd>
                <dd>Help</dd>
            </dl>
        </li>
        <li>
            <h4>Local Garage</h4>
            <dl>
                <dd>About</dd>
                <dd>Jobs</dd>
                <dd>Blog</dd>
                <dd>Help</dd>
            </dl>
        </li>
    </ul>
    <div class="social_link">
        <ul>
            <li>facebook</li>
            <li>twitter</li>
            <li>google</li>
        </ul>
    </div>
    <div class="copyright">
        <small>© Local Garage</small>
    </div>
</div>

<script type="text/javascript">
window.onscroll = function () {
    var scrollY = document.documentElement.scrollTop || document.body.scrollTop;
    var panel = document.getElementById('panel');
    var panel2 = document.getElementById('panel_2');
    var lastY = 0;
    if(panel != null && panel2 != null) {
        if(scrollY >= 152 && scrollY > lastY){
            panel.style.top = "0";
            panel.style.marginTop = "60px";
            panel.style.position = "fixed";
        }else{
            panel.style.top = "10";
            panel.style.marginTop = "0px";
            panel.style.position = "relative";
        }
    }
    lastY = scrollY;
 }
</script>
