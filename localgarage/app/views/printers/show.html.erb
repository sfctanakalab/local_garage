<%- model_class = Printer -%>
<div class="printer_info_title margin_top_100">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="custom_container padding_top_70 printer_info_content">
<div class="printer_info padding_top_70">
    <div class="printer_info_main_content">
        <div class="printer_img"><%= image_tag image_printer_path(@printer) %></div>
        <div class="printer_info_wrapper">
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:machinemodel) %>:</strong></label>
                <div class="content"><%= @printer.machinemodel %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:sizex) %>:</strong></label>
                <div class="content"><%= @printer.sizex %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:sizey) %>:</strong></label>
                <div class="content"><%= @printer.sizey %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:sizez) %>:</strong></label>
                <div class="content"><%= @printer.sizez %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:resolution) %>:</strong></label>
                <div class="content"><%= @printer.resolution %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:location) %>:</strong></label>
                <div class="content"><%= @printer.location %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:condition) %>:</strong></label>
                <div class="content"><%= @printer.condition %></div>
            </div>
            <div class="printer_info_column">
                <label><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></label>
                <div class="content"><%= @printer.user_id %></div>
            </div>
            
        </div>
    </div>
    <div class="printer_info_sidebar">
        <div class="sidebar_container">
            <div class="form-actions">
                <%= link_to t('.back', :default => t("helpers.links.back")),
                    printers_path, :class => ''  %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_printer_path(@printer), :class => '' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    printer_path(@printer),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => '' %>
            </div>

            <p id="notice"><%= notice %></p>

            <% if @printer.condition == true %>
                <h4 class="use_this_printer"><%= link_to "このプリンターを使う", data_path %></h4>
            <% else %>
                <h4 class="during_use">このプリンターは現在使用中です</h4>
            <% end %>
        </div>
    </div>
</div>
