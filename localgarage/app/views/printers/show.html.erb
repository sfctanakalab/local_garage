<%- model_class = Printer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:material) %>:</strong></dt>
  <dd><%= @printer.material %></dd>
  <dt><strong><%= model_class.human_attribute_name(:machinemodel) %>:</strong></dt>
  <dd><%= @printer.machinemodel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sizex) %>:</strong></dt>
  <dd><%= @printer.sizex %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sizey) %>:</strong></dt>
  <dd><%= @printer.sizey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sizez) %>:</strong></dt>
  <dd><%= @printer.sizez %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resolution) %>:</strong></dt>
  <dd><%= @printer.resolution %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @printer.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_url) %>:</strong></dt>
  <dd><%= @printer.image_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:condition) %>:</strong></dt>
  <dd><%= @printer.condition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @printer.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_color) %>:</strong></dt>
  <dd><%= @printer.material_color %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              printers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_printer_path(@printer), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              printer_path(@printer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
