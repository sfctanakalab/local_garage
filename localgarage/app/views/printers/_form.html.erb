<%= form_for @printer, :html => { :class => 'form-horizontal' } do |f| %>

<% if @printer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@printer.errors.count, "error") %> prohibited this map from being saved:</h2>

      <ul>
      <% @printer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :address, :class => 'control-label' %>
    <%= f.text_field :address, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <%= f.text_field :latitude, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <%= f.text_field :longitude, :class => 'form-control' %>
  </div> 
  
  <div class="form-group">
    <%= f.label :machinemodel, :class => 'control-label' %>
    <%= f.text_field :machinemodel, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :sizex, :class => 'control-label' %>
    <%= f.text_field :sizex, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sizey, :class => 'control-label' %>
    <%= f.text_field :sizey, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sizez, :class => 'control-label' %>
