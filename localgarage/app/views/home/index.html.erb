<script type="text/javascript">
function changeHeaderColor() {
	var elements = document.getElementsByName('fixed_header');
	for(var i = 0; i < elements.length; i++){
		elements[i].style.color = "#fff";
	}
	document.getElementById('header_wrapper').style.backgroundColor = "rgba(0,0,0,0)";
	document.getElementById('header_wrapper').style.border = "none";
	var navlink = document.getElementById('navlink');
	if(navlink != null){
		navlink.style.color = "#000";
	}
	//document.getElementById('new_printer_id').style.display = "none";
}
changeHeaderColor();

window.onscroll = function () {
    var scrollY = document.documentElement.scrollTop || document.body.scrollTop;
    if(scrollY >= 400) {
    	document.getElementById('header_wrapper').style.backgroundColor = "rgba(10,10,10,0.5)";
    }else{
    	document.getElementById('header_wrapper').style.backgroundColor = "rgba(0,0,0,0)";
    }
}

function scrollToHowtouse() {
	scrollTo(0,360);
}

function changeLayout() {
	var tableCell = document.getElementsByName('table_cell');
	var textHasSpace = document.getElementsByName('text_has_space');
	var underLineHasSpace = document.getElementsByName('under_line_has_space');
	if(window.innerWidth < 510){
		for(var i = 0; i < tableCell.length; i++){
			tableCell[i].style.display = "table-row";
		}
		for(var i = 0; i < textHasSpace.length; i++){
			textHasSpace[i].style.marginTop = "15%";
		}
	}else{
		for(var i = 0; i < tableCell.length; i++){
			tableCell[i].style.display = "table-cell";
		}
		for(var i = 0; i < textHasSpace.length; i++){
			textHasSpace[i].style.marginTop = "0px";
		}
	}
}
window.addEventListener('load', changeLayout, false);
window.addEventListener('resize', changeLayout, false);

</script>
